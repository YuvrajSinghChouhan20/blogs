<div class="container">
  <div class="row mt-5">
  <h1 class="text-center" >Sign up</h1>
  <div class="col-md-5 mx-auto p-5">
    <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), class: "row g-3") do |form| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="col-md-12">
        <%= form.label :name, class: "form-label"%>
        <%= form.text_field :name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
      </div>

      <div class="col-md-12">
        <%= form.label :email, class: "form-label" %><br />
        <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"  %>
      </div>

      <div class="col-md-12">
        <%= form.label :password, class: 'form-label' %>
        <%= form.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>

      <div class="col-md-12">
        <%= form.label :password_confirmation, class: "form-label" %>
        <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="col-12 my-3">
        <%= form.submit "Sign up", class: "btn btn-lg btn-dark" %>
      </div>

      <%= render "devise/shared/links" %>
    <% end %>
  </div>
  </div>
</div>
